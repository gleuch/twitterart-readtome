%a#follow_button{:href => twitter_link}
  %h4#follow_button_text Follow

#readtome_details.sidebar_block
  %p
    %strong Name:
    = TWITTER_NAMES[:"#{Merb.environment}"][:user]
  %p
    %strong About:
    = get_app_config('about')

%a#currently_reading.sidebar_block{:href => "/stories/currently-reading"}
  %h6 Currently Reading
  - unless @current_story.blank?
    %p
      = @current_story.title
      %br
      = @current_story.author
  - else
    %p.suggest No current story available.

%a#upcoming_reads.sidebar_block{:href => "/stories/upcoming-reads"}
  %h6 Upcoming Reads

%a#previously_read.sidebar_block{:href => "/stories/previously-read"}
  %h6 Previously Read
  %h6#previously_read_count= previous_count


